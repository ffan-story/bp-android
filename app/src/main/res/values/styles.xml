<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_color_blue</item>
    </style>

    <style name="SplashStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/launch_page</item>//@null黑屏 @drawable/icon放一张启动图片
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TitleBarCenterText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_18</item>
    </style>

    <style name="ProgressBarText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="LoadingDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


