<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_color_blue</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="commmonTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="txt_color33_size14" parent="commmonTxt">
        <item name="android:textColor">@color/font_color_33</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="txt_color33_size16" parent="commmonTxt">
        <item name="android:textColor">@color/font_color_33</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="txt_color66_size16" parent="commmonTxt">
        <item name="android:textColor">@color/font_color_66</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="txt_color66_size14" parent="commmonTxt">
        <item name="android:textColor">@color/font_color_66</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="txt_color99_size14" parent="commmonTxt">
        <item name="android:textColor">@color/font_color_99</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="txt_color99_size16" parent="commmonTxt">
        <item name="android:textColor">@color/font_color_99</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="txt_colorwhite_size18" parent="commmonTxt">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_18</item>
    </style>

    <style name="txt_color33_size18" parent="commmonTxt">
        <item name="android:textColor">@color/font_color_33</item>
        <item name="android:textSize">@dimen/font_size_18</item>
    </style>

    <style name="SplashStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/launch_page</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TitleBarCenterText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_18</item>
    </style>

    <style name="ProgressBarText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="LoadingDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullScreenPhoneDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--弹出菜单动画-->
    <style name="PopWindowAnim">
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowExitAnimation">@anim/pop_hide</item>
    </style>

    <style name="SettingButton">
        <item name="android:background">@drawable/border_bottom_background</item>
        <item name="android:drawablePadding">@dimen/view_spacing_10</item>
        <item name="android:padding">@dimen/view_spacing_15</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="btn_margin15_round_blue_click">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/view_spacing_10</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:background">@drawable/bg_btn_round_blue</item>
    </style>

    <style name="item_help_center">
        <item name="android:background">@drawable/border_bottom_background</item>
        <item name="android:drawablePadding">@dimen/view_spacing_10</item>
        <item name="android:padding">@dimen/view_spacing_15</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_color_33</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>
</resources>
