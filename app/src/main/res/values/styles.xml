<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ActionBarTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="CustomActionBarActivity" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/main</item>
        <item name="background">@color/main</item>
        <item name="titleTextStyle">@style/CustomActionBarTitle</item>
    </style>
    
    <style name="CustomActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
