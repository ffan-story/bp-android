<resources>
    <!-- 标签栏 -->
    <declare-styleable name="TabBar">
        <attr name="titles" format="reference"/>
        <attr name="icons" format="reference"/>
        <!-- 默认选中的索引，默认值为－1，表示没有默认项 -->
        <attr name="defaultIndex" format="integer" />
        <!-- 条目布局 -->
        <attr name="itemLayout" format="reference" />
    </declare-styleable>
    <!-- 圆形ImageView -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>
    <!-- 带图标的TextView -->
    <declare-styleable name="IconTextView">
        <attr name="exampleString" format="string" />
        <attr name="exampleDimension" format="dimension" />
        <attr name="exampleColor" format="color" />
        <attr name="exampleDrawable" format="color|reference" />
    </declare-styleable>
    <!-- CountDownButton倒计时按钮属性-begin -->

    <declare-styleable name="CountDownButton" >
        <!-- 时间计数，默认为60，单位秒 -->
        <attr name="timeCount" format="integer" />
        <!-- 计时步进，默认为1 -->
        <attr name="countStep" format="integer" />
        <!-- 计时显示的文本格式 -->
        <attr name="countingText" format="string" />
        <!-- 计时结束后显示的文本格式 -->
        <attr name="endText" format="string" />
        <!-- 触发倒计时的事件 -->
        <attr name="launchEvent">
            <!-- 可见时触发 -->
            <flag name="attached" value="0" />
            <!-- 点击时触发 -->
            <flag name="show" value="1" />
        </attr>

    </declare-styleable>

    <!-- CountDownButton倒计时按钮属性-end -->

    <attr name="cropImageStyle" format="reference" />

    <declare-styleable name="CropImageView">
        <attr name="highlightColor" format="reference|color" />
        <attr name="showThirds" format="boolean" />
        <attr name="showHandles">
            <enum name="changing" value="0" />
            <enum name="always" value="1" />
            <enum name="never" value="2" />
        </attr>
    </declare-styleable>

</resources>
