<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F3F2">
    <RelativeLayout
        android:tag="00"
        android:id="@+id/rl_instants_tempsave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="@dimen/view_spacing_10"
        android:padding="@dimen/view_spacing_12"
        android:background="@drawable/border_top_bottom_background">
        <ImageView
            android:id="@+id/iv_temp_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_save"/>
        <TextView
            android:id="@+id/tv_temp_save"
            android:layout_toRightOf="@id/iv_temp_save"
            android:layout_marginLeft="@dimen/view_spacing_10"
            android:layout_centerVertical="true"
            style="@style/txt_color33_size16"
            android:text="@string/commodity_instants_temp_save"/>
        <TextView
            android:id="@+id/instants_buy_tempsave"
            android:layout_toRightOf="@id/tv_temp_save"
            android:layout_marginLeft="@dimen/view_spacing_5"
            android:background="@drawable/tv_radius_gray"
            style="@style/txt_color33_size12"
            android:text="23"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_spacing_3"
            android:src="@mipmap/icon_enter"/>

    </RelativeLayout>

    <LinearLayout
        android:tag="01"
        android:id="@+id/ll_instants_buy_audit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_spacing_45"
        android:clickable="true"
        android:layout_marginTop="@dimen/view_spacing_10"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_spacing_12"
            android:src="@mipmap/icon_audit"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_spacing_10"
            android:paddingTop="@dimen/view_spacing_10"
            android:paddingBottom="@dimen/view_spacing_10"
            android:background="@drawable/border_bottom_background">
            <TextView
                android:id="@+id/tv_audit"
                android:layout_centerVertical="true"
                style="@style/txt_color33_size16"
                android:text="@string/commodity_instants_audit"/>
            <TextView
                android:id="@+id/instants_buy_audit"
                android:layout_toRightOf="@id/tv_audit"
                android:layout_marginLeft="@dimen/view_spacing_5"
                android:layout_centerVertical="true"
                android:background="@drawable/tv_radius_gray"
                style="@style/txt_color33_size12"
                android:text="23"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/view_spacing_15"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_enter"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:tag="02"
        android:id="@+id/ll_instants_buy_throughed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_spacing_45"
        android:clickable="true"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_spacing_12"
            android:src="@mipmap/icon_through"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_spacing_10"
            android:paddingTop="@dimen/view_spacing_10"
            android:paddingBottom="@dimen/view_spacing_10"
            android:background="@drawable/border_bottom_background">
            <TextView
                android:id="@+id/tv_throughed"
                android:layout_centerVertical="true"
                style="@style/txt_color33_size16"
                android:text="@string/commodity_instants_throughed"/>
            <TextView
                android:id="@+id/instants_buy_throughed"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_throughed"
                android:layout_marginLeft="@dimen/view_spacing_5"
                android:background="@drawable/tv_radius_gray"
                style="@style/txt_color33_size12"
                android:text="5"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/view_spacing_15"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_enter"/>
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:tag="03"
        android:id="@+id/rl_instants_buy_rejected"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_spacing_45"
        android:clickable="true"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_rejected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_spacing_12"
            android:src="@mipmap/icon_rejected"/>
        <TextView
            android:id="@+id/tv_rejected"
            android:layout_toRightOf="@id/iv_rejected"
            android:layout_marginLeft="@dimen/view_spacing_10"
            android:layout_centerVertical="true"
            style="@style/txt_color33_size16"
            android:text="@string/commodity_instants_rejected"/>
        <TextView
            android:id="@+id/instants_buy_rejected"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_rejected"
            android:layout_marginLeft="@dimen/view_spacing_5"
            android:background="@drawable/tv_radius_gray"
            style="@style/txt_color33_size12"
            android:text="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/view_spacing_15"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_enter"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_instants_buy_add"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:clickable="true"
        android:layout_marginTop="@dimen/view_spacing_10"
        android:background="#FFFFFF"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_add"
            android:layout_margin="@dimen/view_spacing_5"
            style="@style/txt_colorblue_size18"
            android:text="@string/commodity_instants_add"
            android:drawableLeft="@mipmap/icon_add"
            android:drawablePadding="@dimen/view_spacing_5"/>
    </RelativeLayout>

</LinearLayout>