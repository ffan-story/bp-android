<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--提货吗-->
    <LinearLayout
        android:id="@+id/ll_goods_code_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_spacing_10">

            <TextView
                android:layout_marginLeft="@dimen/view_spacing_5"
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="订单号：" />

            <TextView
                android:id="@+id/tv_goods_order"
                style="@style/txt_color33_size14"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="123456" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_spacing_5">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="所属部门：" />

            <TextView
                android:id="@+id/tv_goods_branch"
                style="@style/txt_color33_size14"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="北京通州万达广场" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_spacing_5">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="核销状态：" />

            <TextView
                android:id="@+id/tv_goods_status"
                style="@style/txt_color33_size16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="已核销"
                android:textColor="@color/red" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/divider" />

        <TextView
            style="@style/txt_color99_size16"
            android:layout_width="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_spacing_5"
            android:layout_marginTop="@dimen/view_spacing_15"
            android:background="@color/white"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="商品信息" />

        <ListView
            android:id="@+id/lv_goods_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ListView>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_spacing_5">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="总金额：" />

            <TextView
                android:id="@+id/tv_goods_total_money"
                style="@style/txt_color33_size16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="123" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_spacing_5">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="积分支付：" />

            <TextView
                android:id="@+id/tv_goods_integrate_money"
                style="@style/txt_color33_size16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="123" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_spacing_5">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="实际金额：" />

            <TextView
                android:id="@+id/tv_goods_actual_money"
                style="@style/txt_color33_size16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/red"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="123" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_goods_code_use"
        style="@style/btn_margin15_round_blue_click"
        android:layout_alignParentBottom="true"
        android:text="使用"
        android:visibility="gone"/>
</RelativeLayout>
