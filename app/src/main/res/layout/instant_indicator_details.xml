<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/indicator_explains">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/view_spacing_15">

            <TextView
                style="@style/IndicatorDetails"
                android:drawableLeft="@drawable/vertical_blue_line"
                android:drawablePadding="@dimen/view_spacing_3"
                android:layout_marginTop="@dimen/view_spacing_12"
                android:text="@string/indicator_trade_count"
                android:textStyle="bold" />

            <TextView
                style="@style/txt_color66_size14"
                android:layout_marginTop="@dimen/view_spacing_10"
                android:text="@string/indicator_trade_count_explain" />

            <TextView
                style="@style/IndicatorDetails"
                android:layout_marginTop="@dimen/view_spacing_20"
                android:drawableLeft="@drawable/vertical_blue_line"
                android:drawablePadding="@dimen/view_spacing_3"
                android:text="@string/indicator_trade_money"
                android:textStyle="bold" />

            <TextView
                style="@style/txt_color66_size14"
                android:layout_marginTop="@dimen/view_spacing_10"
                android:text="@string/indicator_trade_money_explain" />

            <TextView
                style="@style/IndicatorDetails"
                android:layout_marginTop="@dimen/view_spacing_20"
                android:text="@string/indicator_refund_count"
                android:drawableLeft="@drawable/vertical_blue_line"
                android:drawablePadding="@dimen/view_spacing_3"
                android:textStyle="bold" />

            <TextView
                style="@style/txt_color66_size14"
                android:layout_marginTop="@dimen/view_spacing_10"
                android:text="@string/indicator_refund_count_explain" />

            <TextView
                style="@style/IndicatorDetails"
                android:layout_marginTop="@dimen/view_spacing_20"
                android:drawableLeft="@drawable/vertical_blue_line"
                android:drawablePadding="@dimen/view_spacing_3"
                android:text="@string/indicator_refund_money"
                android:textStyle="bold" />

            <TextView
                style="@style/txt_color66_size14"
                android:layout_marginTop="@dimen/view_spacing_10"
                android:layout_marginBottom="@dimen/view_spacing_25"
                android:text="@string/indicator_refund_money_explain" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>