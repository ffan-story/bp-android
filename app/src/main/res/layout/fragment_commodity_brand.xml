<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#F4F3F2">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_spacing_60"
        android:src="@mipmap/icon_construction"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/view_spacing_15"
        android:textSize="@dimen/font_size_18"
        android:textColor="#999999"
        android:text="@string/commodity_brand_build"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/view_spacing_5"
        android:textSize="@dimen/font_size_14"
        android:textColor="#999999"
        android:text="@string/commodity_brand_wait"/>
</LinearLayout>