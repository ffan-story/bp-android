<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/brown">

    <RelativeLayout
        android:id="@+id/rl_coupon_management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_spacing_10"
        android:layout_marginLeft="@dimen/view_spacing_15"
        android:layout_marginRight="@dimen/view_spacing_15"
        android:paddingLeft="@dimen/view_spacing_20"
        android:paddingRight="@dimen/view_spacing_20"
        android:paddingTop="@dimen/view_spacing_15"
        android:paddingBottom="@dimen/view_spacing_15"
        android:background="@drawable/red_fillet_rect">

        <TextView
            android:id="@+id/reconciliation_management_transaction_flow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_spacing_10"
            android:text="@string/coupon_management"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_20" />

        <TextView
            android:id="@+id/reconciliation_management_view_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reconciliation_management_transaction_flow"
            android:layout_below="@id/reconciliation_management_transaction_flow"
            android:layout_marginTop="@dimen/view_spacing_5"
            android:text="@string/reconciliation_management_view_details"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_vouchers"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_activity_management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_spacing_10"
        android:layout_marginLeft="@dimen/view_spacing_15"
        android:layout_marginRight="@dimen/view_spacing_15"
        android:paddingLeft="@dimen/view_spacing_20"
        android:paddingRight="@dimen/view_spacing_20"
        android:paddingTop="@dimen/view_spacing_15"
        android:paddingBottom="@dimen/view_spacing_15"
        android:background="@drawable/yellow_fillet_rect">

        <TextView
            android:id="@+id/reconciliation_management_financial_reconciliation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_spacing_10"
            android:text="@string/event_management"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reconciliation_management_financial_reconciliation"
            android:layout_below="@id/reconciliation_management_financial_reconciliation"
            android:layout_marginTop="@dimen/view_spacing_5"
            android:text="@string/reconciliation_management_view_details"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_bag"/>

    </RelativeLayout>
</LinearLayout>