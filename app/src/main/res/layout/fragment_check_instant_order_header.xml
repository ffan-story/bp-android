<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/order_total_count"
        style="@style/txt_color33_size14"
        android:layout_margin="@dimen/view_spacing_15"
        android:text="总条数 : 0条"/>

    <RelativeLayout
        android:id="@+id/title_continer"
        android:padding="@dimen/view_spacing_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom_background"
        android:layout_below="@id/order_total_count">

        <TextView
            android:id="@+id/order_title"
            style="@style/InstantDetailItemTile"
            android:maxEms="13"
            android:ellipsize="end"
            android:text="123"/>

    </RelativeLayout>

</RelativeLayout>