<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_function_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/index_divider_height"
    android:background="@android:color/white"
    android:padding="@dimen/view_spacing_20">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="@dimen/view_spacing_10"
        android:gravity="center"
        android:text="@string/index_history_text"
        android:textColor="@color/font_color_gray"
        android:textSize="@dimen/font_size_14" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/text"
        android:src="@mipmap/ic_red_dot" />
</RelativeLayout>

