<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/banner_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_spacing_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxEms="15"
            android:paddingBottom="@dimen/view_spacing_10"
            android:paddingTop="@dimen/view_spacing_10"
            android:singleLine="true"
            android:text="北京通州周周抢夏日狂欢"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_20"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_spacing_20"
            android:background="@mipmap/icon_bcome"/>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_spacing_10"
        android:background="@drawable/grey_fillet_rect"
        android:paddingLeft="@dimen/view_spacing_10"
        android:paddingRight="@dimen/view_spacing_10"
        android:text="添加报名商品"
        android:textColor="@color/white"/>

</LinearLayout>