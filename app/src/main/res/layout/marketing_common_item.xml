<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/view_spacing_10"
    android:paddingBottom="@dimen/view_spacing_15"
    android:paddingRight="@dimen/view_spacing_10">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/view_size_5"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="@dimen/view_spacing_15"
            android:layout_marginTop="@dimen/view_spacing_10">

            <TextView
                android:id="@+id/common_code"
                style="@style/txt_color33_size14"
                android:text="券码"/>

            <TextView
                android:id="@+id/common_award_money"
                style="@style/txt_color33_size14"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/view_spacing_40"
                android:text="核销状态"/>

            <TextView
                android:id="@+id/common_coupon_name"
                style="@style/txt_color99_size12"
                android:textSize="@dimen/font_size_12"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/common_code"
                android:layout_marginBottom="@dimen/view_size_5"
                android:layout_marginTop="@dimen/view_size_10"
                android:maxLength="20"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="券名称"/>

            <TextView
                android:id="@+id/common_charge_off_time"
                style="@style/txt_color99_size12"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/common_coupon_name"
                android:text="核销时间"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
