<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color_gray_f3">

    <com.feifan.bp.widget.SegmentedGroup
        android:id="@+id/red_segmentedGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_spacing_20"
        android:layout_marginRight="@dimen/view_spacing_20"
        android:layout_marginTop="@dimen/view_spacing_10"
        android:orientation="horizontal"
        segmentedgroup:sc_border_width="1dp"
        segmentedgroup:sc_corner_radius="5dp"
        segmentedgroup:sc_tint_color="@color/accent">

        <RadioButton
            android:id="@+id/red_rdb_today"
            style="@style/RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/today" />

        <RadioButton
            android:id="@+id/red_rdb_yesterday"
            style="@style/RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/yesterday" />

        <RadioButton
            android:id="@+id/red_rdb_custom"
            style="@style/RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/custom" />

    </com.feifan.bp.widget.SegmentedGroup>

    <TextView
        android:id="@+id/red_tv_query_time"
        style="@style/txt_color_blue_size14"
        android:layout_below="@id/red_segmentedGroup"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/view_spacing_10"
        android:layout_marginTop="@dimen/view_spacing_10"
        android:drawableLeft="@mipmap/icon_time_bulue"
        android:drawablePadding="@dimen/view_spacing_5"
        android:text="查询时间:2016-1-7" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_coupon_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/more_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="@dimen/dividerheight"
            android:headerDividersEnabled="false"
            android:divider="@color/divider"
            android:scrollbars="none"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <include layout="@layout/layout_no_net" android:id="@+id/no_net"/>

</LinearLayout>
