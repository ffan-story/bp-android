<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/view_spacing_10"
                android:paddingBottom="@dimen/view_spacing_15"
                android:paddingRight="@dimen/view_spacing_10">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="@dimen/view_size_5"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/view_spacing_10"
            android:paddingLeft="@dimen/view_spacing_15"
            android:paddingRight="@dimen/view_spacing_15"
            android:paddingBottom="@dimen/view_spacing_15"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/financial_adjust_no_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/txt_color99_size13"
                    android:layout_centerVertical="true"
                    android:text="@string/financial_adjust_no"/>

                <TextView
                    android:id="@+id/financial_adjust_no"
                    style="@style/txt_color33_size14"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="--"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/financial_adjust_settle_no_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/financial_adjust_no_container"
                android:layout_marginTop="@dimen/view_spacing_5">

                <TextView
                    style="@style/txt_color99_size13"
                    android:layout_centerVertical="true"
                    android:text="@string/financial_adjust_order_no"/>

                <TextView
                    android:id="@+id/financial_adjust_settle_no"
                    style="@style/txt_color33_size14"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="--"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/financial_adjust_amount_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/financial_adjust_settle_no_container"
                android:layout_marginTop="@dimen/view_spacing_5">

                <TextView
                    style="@style/txt_color99_size13"
                    android:layout_centerVertical="true"
                    android:text="@string/financial_adjust_amount"/>

                <TextView
                    android:id="@+id/financial_adjust_amount"
                    style="@style/txt_color33_size14"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="--"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/financial_adjust_explain_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/financial_adjust_amount_container"
                android:layout_marginTop="@dimen/view_spacing_5">

                <TextView
                    style="@style/txt_color99_size13"
                    android:text="@string/financial_adjust_explain"/>

                <TextView
                    android:id="@+id/financial_adjust_explain"
                    style="@style/txt_color33_size14"
                    android:layout_alignParentRight="true"
                    android:maxEms="13"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="--"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>