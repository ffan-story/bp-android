<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_signup_detail_refuse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/view_spacing_15">


                <TextView
                    android:id="@+id/tv"
                    style="@style/txt_color33_size14"
                    android:text="@string/current_status"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_toRightOf="@id/tv"
                    android:id="@+id/tv_signup_detail_status"
                    style="@style/txt_color33_size14"
                    android:textColor="@color/font_color_red"/>

                <TextView
                    android:id="@+id/tv1"
                    style="@style/txt_color33_size12"
                    android:text="@string/refuse_cause"
                    android:layout_below="@id/tv"/>
                <TextView
                    android:layout_below="@id/tv_signup_detail_status"
                    android:layout_toRightOf="@id/tv1"
                    android:id="@+id/tv_signup_refuse_cause"
                    style="@style/txt_color33_size12"
                    android:textColor="@color/font_color_red"/>


                <Button
                    android:layout_alignParentRight="true"
                    style="@style/btn_round_blue_change_white_click"
                    android:layout_width="wrap_content"
                    android:layout_margin="0dp"
                    android:text="@string/check_history"/>

            </RelativeLayout>

            <TextView
                style="@style/txt_color33_size14"
                android:layout_marginLeft="@dimen/view_spacing_15"
                android:layout_marginBottom="@dimen/view_spacing_10"
                android:layout_marginTop="@dimen/view_spacing_15"
                android:text="@string/goods_number" />

            <ListView
                android:id="@+id/lv_goods_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:cacheColorHint="@color/transparent"
                android:divider="@color/divider"
                android:dividerHeight="0.5dp"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:paddingLeft="@dimen/view_spacing_15"
                android:paddingRight="@dimen/view_spacing_15"
                android:scrollbars="none" />


            <TextView
                style="@style/txt_color33_size14"
                android:layout_marginLeft="@dimen/view_spacing_15"
                android:layout_marginBottom="@dimen/view_spacing_10"
                android:layout_marginTop="@dimen/view_spacing_15"
                android:text="@string/discount" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_color33_size14"
                    android:layout_margin="@dimen/view_spacing_15"
                    android:text="@string/shop_discount" />

                <EditText
                    android:id="@+id/ed_flash_goods_vendor_discount"
                    style="@style/ed_color33_size14"
                    android:textColor="@color/font_color_red"/>

                <TextView
                    style="@style/txt_color33_size14"
                    android:layout_marginBottom="@dimen/view_spacing_10"
                    android:layout_marginTop="@dimen/view_spacing_10"
                    android:text="@string/units_yuan" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_color33_size14"
                    android:layout_margin="@dimen/view_spacing_15"
                    android:text="@string/feifan_discount" />

                <TextView
                    style="@style/txt_color33_size14"
                    android:layout_marginBottom="@dimen/view_spacing_10"
                    android:layout_marginTop="@dimen/view_spacing_10"
                    android:text="10å…ƒ" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_divider1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dividerheight"
                android:layout_marginLeft="@dimen/view_spacing_15"
                android:layout_marginRight="@dimen/view_spacing_15"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_height_60"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/view_spacing_15"
                android:paddingRight="@dimen/view_spacing_15"
                android:paddingTop="@dimen/view_spacing_10">

                <TextView
                    style="@style/txt_color33_size14"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="top"
                    android:text="@string/goods_discount" />

                <ListView
                    android:id="@+id/lv_goods_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:divider="@color/transparent"
                    android:dividerHeight="0dp"
                    android:gravity="right"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbars="none" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bnt_flash_save_setting"
            style="@style/btn_round_orange_click"
            android:layout_weight="1"
            android:text="@string/save_setting" />

        <Button
            android:id="@+id/bnt_flash_atonce_submit"
            style="@style/btn_round_orange_click"
            android:layout_weight="1"
            android:text="@string/at_once_submit" />
    </LinearLayout>

</RelativeLayout>