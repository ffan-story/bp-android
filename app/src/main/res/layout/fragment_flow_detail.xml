<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_spacing_20"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
            android:id="@+id/item_1"
            layout="@layout/item_flow_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_spacing_20"
            android:layout_marginTop="@dimen/view_spacing_20"/>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:background="@color/bg_color_grey"/>

        <include
            android:id="@+id/item_2"
            layout="@layout/item_flow_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_spacing_20"
            android:layout_marginTop="@dimen/view_spacing_20"/>
    </LinearLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="140dp"
        android:layout_marginBottom="@dimen/view_spacing_20"
        android:layout_marginTop="@dimen/view_spacing_20"
        android:background="@color/bg_color_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_spacing_20"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
            android:id="@+id/item_3"
            layout="@layout/item_flow_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_spacing_20"
            android:layout_marginTop="@dimen/view_spacing_20"/>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:background="@color/bg_color_grey"/>

        <include
            android:id="@+id/item_4"
            layout="@layout/item_flow_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_spacing_20"
            android:layout_marginTop="@dimen/view_spacing_20"/>
    </LinearLayout>

</LinearLayout>