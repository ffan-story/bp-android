<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_activity_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_spacing_10"
            android:background="@drawable/pinkred_corner_rect"
            android:paddingLeft="@dimen/view_spacing_10"
            android:paddingRight="@dimen/view_spacing_5"
            android:text="闪购活动"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_spacing_10"
            android:layout_marginTop="@dimen/view_spacing_10"
            android:text="北京通州周周抢夏日狂欢"
            android:textColor="@color/font_color_33"
            android:textSize="@dimen/font_size_18"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_spacing_10"
            android:layout_marginTop="@dimen/view_spacing_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_status_label"
                style="@style/txt_color66_size14"
                android:text="已报名商家:"/>

            <TextView
                android:id="@+id/tv_activity_status"
                style="@style/txt_color33_size14"
                android:text="50"
                android:textColor="@color/red"/>
        </LinearLayout>

        <TextView
            style="@style/txt_color66_size14"
            android:layout_marginLeft="@dimen/view_spacing_10"
            android:layout_marginTop="@dimen/view_spacing_5"
            android:text="活动时间 "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_spacing_5"
            android:layout_marginLeft="@dimen/view_spacing_10"
            android:layout_marginTop="@dimen/view_spacing_5"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_activity_sdate"
                style="@style/txt_color66_size14"
                android:text="2015.8.1 10:00:00"/>

            <ImageView
                android:layout_width="@dimen/view_spacing_5"
                android:layout_height="@dimen/view_height_1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/view_spacing_5"
                android:layout_marginRight="@dimen/view_spacing_5"
                android:background="@color/font_color_66"/>

            <TextView
                android:id="@+id/tv_activity_edate"
                style="@style/txt_color66_size14"
                android:text="2015.8.1 10:00:00"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>