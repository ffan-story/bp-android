<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/view_height_50"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/view_spacing_15">
            <TextView
                android:id="@+id/tv_signup_detail_status"
                style="@style/txt_color33_size14"
                android:layout_centerVertical="true"/>
            <Button
                android:layout_alignParentRight="true"
                style="@style/btn_white_stroke_blue"
                android:layout_width="wrap_content"
                android:layout_margin="0dp"
                android:text="@string/check_history"/>

        </RelativeLayout>

        <TextView
            style="@style/txt_color33_size14"
            android:layout_margin="@dimen/view_spacing_15"
            android:text="@string/goods_number" />


        <LinearLayout
            android:id="@+id/line_goods_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/view_spacing_10"
            android:paddingLeft="@dimen/view_spacing_15"
            android:paddingRight="@dimen/view_spacing_15"
            android:paddingTop="@dimen/view_spacing_10" />


        <TextView
            style="@style/txt_color33_size14"
            android:layout_margin="@dimen/view_spacing_15"
            android:text="@string/discount" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vendor_discount"
                style="@style/txt_color33_size14"
                android:layout_margin="@dimen/view_spacing_15"
                android:text="@string/discount_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_feifan_discount"
                style="@style/txt_color33_size14"
                android:layout_margin="@dimen/view_spacing_15" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerheight"
            android:layout_marginLeft="@dimen/view_spacing_15"
            android:layout_marginRight="@dimen/view_spacing_15"
            android:background="@color/divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/view_spacing_15"
            android:paddingRight="@dimen/view_spacing_15">

            <TextView
                style="@style/txt_color33_size14"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/view_spacing_10"
                android:layout_marginTop="@dimen/view_spacing_10"
                android:text="@string/goods_discount" />

            <LinearLayout
                android:id="@+id/line_goods_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/view_spacing_10"
                android:layout_marginTop="@dimen/view_spacing_10"
                android:background="@color/white"
                android:orientation="vertical" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
