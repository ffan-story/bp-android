<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#11000000">

    <TextView
        android:id="@+id/tv_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:drawablePadding="@dimen/view_spacing_10"
        android:drawableTop="@mipmap/empty_ic_timeout"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:textColor="#bb000000"
        android:singleLine="true"
        android:text="验证码错了"
        android:textSize="@dimen/font_size_18" />
    <TextView
        android:layout_marginTop="@dimen/view_spacing_5"
        android:layout_below="@id/tv_error_text"
        android:layout_centerHorizontal="true"
        style="@style/txt_color33_size14"
        android:text="请重新输入"/>

    <RelativeLayout
        android:id="@+id/rl_ticket_code_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_code_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_spacing_10"
                android:layout_marginRight="@dimen/view_spacing_10"
                android:layout_marginTop="@dimen/view_spacing_10">

                <TextView
                    style="@style/txt_color99_size14"
                    android:layout_centerVertical="true"
                    android:text="券码：" />

                <TextView
                    android:id="@+id/tv_ticket_code"
                    style="@style/txt_color33_size14"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="123456" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_spacing_10"
                android:layout_marginRight="@dimen/view_spacing_10"
                android:layout_marginTop="@dimen/view_spacing_5">

                <TextView
                    style="@style/txt_color99_size14"
                    android:layout_centerVertical="true"
                    android:text="领券时间：" />

                <TextView
                    android:id="@+id/tv_ticket_code_time"
                    style="@style/txt_color33_size14"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="2015-12-31 20:32:00" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_spacing_10"
                android:layout_marginRight="@dimen/view_spacing_10"
                android:layout_marginTop="@dimen/view_spacing_5">

                <TextView
                    style="@style/txt_color99_size14"
                    android:layout_centerVertical="true"
                    android:text="有效期至：" />

                <TextView
                    android:id="@+id/tv_ticket_code_timeout"
                    style="@style/txt_color33_size14"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="2015-12-31 20:32:00" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_spacing_10"
                android:layout_marginRight="@dimen/view_spacing_10"
                android:layout_marginTop="@dimen/view_spacing_5">

                <TextView
                    style="@style/txt_color99_size14"
                    android:layout_centerVertical="true"
                    android:text="券状态：" />

                <TextView
                    android:id="@+id/tv_ticket_code_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    style="@style/txt_color33_size16"
                    android:singleLine="true"
                    android:textColor="@color/red"
                    android:text="已核销" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_code_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_code_top"
            android:layout_marginTop="@dimen/view_spacing_10"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="@dimen/view_spacing_10">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="券信息：" />

            <TextView
                android:id="@+id/tv_ticket_code_title1"
                style="@style/txt_color33_size14"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/view_spacing_5"
                android:text="合法的梵非服饰地方：" />

            <TextView
                android:id="@+id/tv_ticket_code_title2"
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/view_spacing_5"
                android:text="负担覅私活阿斯顿大少：" />
        </LinearLayout>

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/ll_code_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_code_center"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF"
            android:padding="@dimen/view_spacing_10">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="活动规则：" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ptr_rotate_arrow"/>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/rl_ticket_code_result"
        android:id="@+id/ll_goods_code_result"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_spacing_10">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="订单号：" />

            <TextView
                android:id="@+id/tv_goods_order"
                style="@style/txt_color33_size14"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="right"
                android:text="123456"
                android:singleLine="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_spacing_5">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="所属部门：" />

            <TextView
                android:id="@+id/tv_goods_branch"
                style="@style/txt_color33_size14"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:text="北京通州万达广场"
                android:gravity="right"
                android:singleLine="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_spacing_5">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="核销状态：" />

            <TextView
                android:id="@+id/tv_goods_status"
                style="@style/txt_color33_size16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:text="已核销"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/red" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/divider" />
        <TextView
            android:background="@color/white"
            style="@style/txt_color99_size16"
            android:layout_width="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_spacing_5"
            android:layout_marginTop="@dimen/view_spacing_15"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="商品信息" />
        <ListView
            android:id="@+id/lv_goods_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ListView>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_spacing_5">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="总金额：" />

            <TextView
                android:id="@+id/tv_goods_total_money"
                style="@style/txt_color33_size16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="123" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_spacing_5">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="积分支付：" />

            <TextView
                android:id="@+id/tv_goods_integrate_money"
                style="@style/txt_color33_size16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="123" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_spacing_5">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="实际金额：" />

            <TextView
                android:id="@+id/tv_goods_actual_money"
                style="@style/txt_color33_size16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="123" />
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_code_use"
        android:layout_margin="@dimen/view_spacing_10"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_dark"
        android:text="使用"
        android:textSize="@dimen/font_size_20"
        android:textColor="@color/white"
        />
</RelativeLayout>
