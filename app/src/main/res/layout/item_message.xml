<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/view_spacing_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/img_message_redpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_red_dot"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_message_title"
            style="@style/txt_color66_size16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_spacing_5"
            android:text="多少了发掘"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_message_time"
        style="@style/txt_color99_size14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_spacing_15"/>
</LinearLayout>
