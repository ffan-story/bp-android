<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_spacing_10"
            android:layout_marginLeft="@dimen/view_spacing_15"
            android:layout_marginTop="@dimen/view_spacing_10"
            android:text="@string/indicator_flash_purchase_index"
            android:textColor="@color/font_color_66"
            android:textSize="@dimen/font_size_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/view_spacing_10"
            android:paddingLeft="@dimen/view_spacing_15"
            android:paddingRight="@dimen/view_spacing_15"
            android:paddingTop="@dimen/view_spacing_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indicator_payment_success"
                android:textColor="@color/font_color_66"
                android:textSize="@dimen/font_size_22"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indicator_store_line"
                android:textColor="@color/font_color_66"
                android:textSize="@dimen/font_size_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_spacing_10"
                android:text="@string/indicator_trading_success"
                android:textColor="@color/font_color_66"
                android:textSize="@dimen/font_size_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indicator_write_off_successfully"
                android:textColor="@color/font_color_66"
                android:textSize="@dimen/font_size_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_spacing_10"
                android:text="@string/indicator_users_initiate_refund"
                android:textColor="@color/font_color_66"
                android:textSize="@dimen/font_size_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indicator_initiate_refund"
                android:textColor="@color/font_color_66"
                android:textSize="@dimen/font_size_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_spacing_10"
                android:text="@string/indicator_merchant_confirmation_refund"
                android:textColor="@color/font_color_66"
                android:textSize="@dimen/font_size_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indicator_system_automatic_refund"
                android:textColor="@color/font_color_66"
                android:textSize="@dimen/font_size_20" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_spacing_10"
            android:layout_marginLeft="@dimen/view_spacing_15"
            android:layout_marginTop="@dimen/view_spacing_10"
            android:text="@string/indicator_general_vouchers"
            android:textColor="@color/font_color_66"
            android:textSize="@dimen/font_size_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/view_spacing_10"
            android:paddingLeft="@dimen/view_spacing_15"
            android:paddingRight="@dimen/view_spacing_15"
            android:paddingTop="@dimen/view_spacing_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indicator_write_successfully"
                android:textColor="@color/font_color_66"
                android:textSize="@dimen/font_size_22"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indicator_general_certificate_success"
                android:textColor="@color/font_color_66"
                android:textSize="@dimen/font_size_20" />
        </LinearLayout>

        <TextView
            android:id="@+id/indicator_more_trading_flow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_spacing_10"
            android:layout_marginLeft="@dimen/view_spacing_15"
            android:layout_marginTop="@dimen/view_spacing_10"
            android:textColor="@color/font_color_66"
            android:textSize="@dimen/font_size_20" />

    </LinearLayout>
</ScrollView>