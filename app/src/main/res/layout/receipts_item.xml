<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingLeft="@dimen/view_spacing_10"
             android:paddingBottom="@dimen/view_spacing_10"
             android:paddingRight="@dimen/view_spacing_10">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/view_size_5"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/view_spacing_15"
            android:paddingBottom="@dimen/view_spacing_15">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_marginLeft="@dimen/view_spacing_15"
                android:text="@string/receipts_pay_type"/>

            <TextView
                android:id="@+id/receipts_pay_type"
                style="@style/txt_color33_size16"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/view_spacing_25"
                android:text="乐付"/>

            <TextView
                style="@style/txt_color99_size14"
                android:layout_below="@id/receipts_pay_type"
                android:layout_marginLeft="@dimen/view_spacing_15"
                android:layout_marginTop="@dimen/view_spacing_5"
                android:text="@string/receipts_record_no"/>

            <TextView
                android:id="@+id/receipts_pay_number"
                style="@style/txt_color33_size16"
                android:layout_below="@id/receipts_pay_type"
                android:layout_alignParentRight="true"
                android:maxLines="2"
                android:maxEms="13"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/view_spacing_5"
                android:layout_marginRight="@dimen/view_spacing_25"
                android:text="0000000001"/>

            <TextView
                style="@style/txt_color99_size14"
                android:layout_below="@id/receipts_pay_number"
                android:layout_marginLeft="@dimen/view_spacing_15"
                android:layout_marginTop="@dimen/view_spacing_5"
                android:text="@string/receipts_status"/>

            <TextView
                android:id="@+id/receipts_status"
                style="@style/txt_color33_size16"
                android:layout_below="@id/receipts_pay_number"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/view_spacing_25"
                android:layout_marginTop="@dimen/view_spacing_5"
                android:text="付款成功"/>

            <TextView
                style="@style/txt_color99_size14"
                android:layout_below="@id/receipts_status"
                android:layout_marginLeft="@dimen/view_spacing_15"
                android:layout_marginTop="@dimen/view_spacing_5"
                android:text="@string/receipts_time"/>

            <TextView
                android:id="@+id/receipts_time"
                style="@style/txt_color33_size16"
                android:layout_below="@id/receipts_status"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/view_spacing_25"
                android:layout_marginTop="@dimen/view_spacing_5"
                android:text="2016-03-17 10:00:00"/>

            <TextView
                style="@style/txt_color99_size14"
                android:layout_below="@id/receipts_time"
                android:layout_marginLeft="@dimen/view_spacing_15"
                android:layout_marginTop="@dimen/view_spacing_5"
                android:text="@string/receipts_amount"/>

            <TextView
                android:id="@+id/receipts_amount"
                style="@style/InstantDetailMoney"
                android:layout_below="@id/receipts_time"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/view_spacing_25"
                android:layout_marginTop="@dimen/view_spacing_5"
                android:text="￥0"/>

            <TextView
                style="@style/txt_color99_size14"
                android:layout_below="@id/receipts_amount"
                android:layout_marginLeft="@dimen/view_spacing_15"
                android:layout_marginTop="@dimen/view_spacing_5"
                android:text="@string/receipts_real_amount"/>

            <TextView
                android:id="@+id/receipts_real_amount"
                style="@style/InstantDetailMoney"
                android:layout_below="@id/receipts_amount"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/view_spacing_25"
                android:layout_marginTop="@dimen/view_spacing_5"
                android:text="￥0"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>