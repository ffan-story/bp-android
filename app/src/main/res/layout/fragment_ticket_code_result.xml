<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--券码-->
    <RelativeLayout
        android:id="@+id/rl_ticket_code_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_code_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_spacing_10"
                android:layout_marginRight="@dimen/view_spacing_10"
                android:layout_marginTop="@dimen/view_spacing_10">

                <TextView
                    style="@style/txt_color99_size14"
                    android:layout_centerVertical="true"
                    android:text="券码：" />

                <TextView
                    android:id="@+id/tv_ticket_code"
                    style="@style/txt_color33_size14"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="123456" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_spacing_10"
                android:layout_marginRight="@dimen/view_spacing_10"
                android:layout_marginTop="@dimen/view_spacing_5">

                <TextView
                    style="@style/txt_color99_size14"
                    android:layout_centerVertical="true"
                    android:text="领券时间：" />

                <TextView
                    android:id="@+id/tv_ticket_code_time"
                    style="@style/txt_color33_size14"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="2015-12-31 20:32:00" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_spacing_10"
                android:layout_marginRight="@dimen/view_spacing_10"
                android:layout_marginTop="@dimen/view_spacing_5">

                <TextView
                    style="@style/txt_color99_size14"
                    android:layout_centerVertical="true"
                    android:text="有效期至：" />

                <TextView
                    android:id="@+id/tv_ticket_code_timeout"
                    style="@style/txt_color33_size14"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="2015-12-31 20:32:00" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_spacing_10"
                android:layout_marginRight="@dimen/view_spacing_10"
                android:layout_marginTop="@dimen/view_spacing_5">

                <TextView
                    style="@style/txt_color99_size14"
                    android:layout_centerVertical="true"
                    android:text="券状态：" />

                <TextView
                    android:id="@+id/tv_ticket_code_status"
                    style="@style/txt_color33_size16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="已核销"
                    android:textColor="@color/red" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_code_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_code_top"
            android:layout_marginTop="@dimen/view_spacing_10"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="@dimen/view_spacing_10">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="券信息：" />

            <TextView
                android:id="@+id/tv_ticket_code_title1"
                style="@style/txt_color33_size14"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/view_spacing_5"
                android:text="合法的梵非服饰地方：" />

            <TextView
                android:id="@+id/tv_ticket_code_title2"
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/view_spacing_5"
                android:text="负担覅私活阿斯顿大少：" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_code_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_code_center"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:padding="@dimen/view_spacing_10">

            <TextView
                style="@style/txt_color99_size14"
                android:layout_centerVertical="true"
                android:text="活动规则：" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ptr_rotate_arrow" />

        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_ticket_code_use"
        style="@style/btn_margin15_round_blue_click"
        android:layout_alignParentBottom="true"
        android:text="使用"
        android:visibility="gone"/>
</RelativeLayout>
