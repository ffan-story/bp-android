<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/radio_button_conner_radius"/>
            <!-- 描边 -->
            <stroke
                android:width="@dimen/dividerheight"
                android:color="@color/bg_blue_defeat"
                android:dashWidth="@dimen/dividerheight"
                android:dashGap="0dp"/>
        </shape>
    </item>

    <!-- 获取焦点 -->
    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/radio_button_conner_radius"/>
            <!-- 描边 -->
            <stroke
                android:width="@dimen/dividerheight"
                android:color="@color/bg_blue_defeat"
                android:dashWidth="@dimen/dividerheight"
                android:dashGap="0dp"/>
        </shape>
    </item>

    <!-- 正常状态 -->
    <item>
        <shape>
            <solid android:color="@color/bg_blue_defeat" />
            <corners android:radius="@dimen/radio_button_conner_radius"/>
        </shape>
    </item>

</selector>